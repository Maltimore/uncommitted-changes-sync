#!/usr/bin/env bash
# credit: chrstphr

last="$(date +%s%3N)"
inotifywait -mrqe modify -e create -e delete $2 | while read event; do
    this="$(date +%s%3N)"
    
    # if last update is more than 200 msecs ago
    if [ $(($this - $last)) -gt 200 ]; then
        # sleeping to wait for all incoming inotify events which we don't want to process
        sleep 0.2
        last="$(date +%s%3N)"
        echo event handled "$event"
        "$@" 2>&1 | awk '{print " ",$0}'
    else
        echo event skipped "$event"
    fi;
done;

